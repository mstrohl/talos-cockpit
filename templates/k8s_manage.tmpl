{{define "title"}}Manage K8S{{end}}
{{define "content"}}
	<div id="bottom">
	{{ block "nav" .}} {{end}}
	<main id="main">
    <div class="client-info">
    Cluster ID: {{ .ClusterID }}
    </div>
		<h1>Upgrade K8S to latest Version</h1>
		<br>
		<form action="/k8s/upgrade" method="post">
			<label>Pick a controller:</label><br>
			<select name="ctl">
			{{ range .NodeList }}
				<option value="{{ .Hostname }}">{{ .Hostname }}</option>
			{{end}}
			</select><br>
			<input type="hidden" name="cluster_id" value="{{ .ClusterID }}"></input>
			<br>			
			<input type="submit" class="btn btn-primary" value="Upgrade Now" onclick="return confirm('Are you sure?')"> <a class="btn btn-default" href="/inventory">Abort</a>
		</form>
{{end}}